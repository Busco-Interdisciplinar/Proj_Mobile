<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:layout_margin="0dp"
    android:layout_marginLeft="12dp"
    android:background="#FFFFFF"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/outfit_bold"
        android:text="Tickets de promoção"
        android:textColor="#FF9800"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font_outfit"
        android:text="Mais usados"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lista"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.528" />

    <HorizontalScrollView
        android:id="@+id/lista"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="163dp"
                android:layout_height="207dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/rounded_orange"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.064"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.057">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="146dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/fundo_branco"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tomate" />

                <TextView
                    android:id="@+id/nome_produto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:gravity="center"
                    android:text="1,5kg de Tomate"
                    android:textColor="#FDFCFC"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/preco_produto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/font_outfit"
                    android:text="De 13,90 por 7,90"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:text="Usar promoção"
                    android:textSize="10sp"
                    app:cornerRadius="50sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="163dp"
                android:layout_height="207dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/rounded_orange"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.064"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.057">

                <ImageView
                    android:id="@+id/imageViewprodutoBrocolis"
                    android:layout_width="146dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/fundo_branco"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/brocolis" />

                <TextView
                    android:id="@+id/nome_produtoBrocolis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:gravity="center"
                    android:text="600g de Brócolis"
                    android:textColor="#FDFCFC"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/preco_produtoBrocolis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/font_outfit"
                    android:text="De 9,90 por 6,00"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp" />

                <Button
                    android:id="@+id/usar_promocaoBrocolis"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:text="Usar promoção"
                    android:textSize="10sp"
                    app:cornerRadius="50sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="163dp"
                android:layout_height="207dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/rounded_orange"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.064"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.057">

                <ImageView
                    android:id="@+id/imageViewproduto"
                    android:layout_width="146dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/fundo_branco"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/morango" />

                <TextView
                    android:id="@+id/nome_produtoMorango"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:gravity="center"
                    android:text="500g de Morango"
                    android:textColor="#FDFCFC"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/preco_produtoMorango"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/font_outfit"
                    android:text="De 9,90 por 5,90"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp" />

                <Button
                    android:id="@+id/usar_promocaoMorango"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:text="Usar promoção"
                    android:textSize="10sp"
                    app:cornerRadius="50sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="163dp"
                android:layout_height="207dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/rounded_orange"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.064"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.057">

                <ImageView
                    android:id="@+id/imageViewprodutoAbacaxi"
                    android:layout_width="146dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/fundo_branco"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/abacaxi" />

                <TextView
                    android:id="@+id/nome_produtoAbacaxi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:gravity="center"
                    android:text="1kg de Abacaxi"
                    android:textColor="#FDFCFC"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/preco_produtoAbacaxi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/font_outfit"
                    android:text="De 8,90 por 4,50"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp" />

                <Button
                    android:id="@+id/usar_promocaoAbacaxi"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:text="Usar promoção"
                    android:textSize="10sp"
                    app:cornerRadius="50sp" />
            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/font_outfit"
        android:paddingLeft="10dp"
        android:text="Disponíveis"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/lista"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="12dp" />

    <ListView
        android:id="@+id/list_ticket"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        app:layout_constraintVertical_bias="0.098"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>