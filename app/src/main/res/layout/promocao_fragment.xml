<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:layout_margin="0dp"
    android:layout_marginLeft="12dp"
    android:background="#FFFFFF"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Tickets de promoção"
        android:textColor="#FF9800"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Mais usados"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lista"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.528" />

    <HorizontalScrollView
        android:id="@+id/lista"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="132dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="163dp"
                android:layout_height="207dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/rounded_orange"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.064"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.057">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="146dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/fundo_branco"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tomate" />

                <TextView
                    android:id="@+id/nome_produto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:gravity="center"
                    android:text="1,5kg de Tomate"
                    android:textColor="#FDFCFC"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/preco_produto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/font_outfit"
                    android:text="De 13,90 por 7,90"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:text="Usar promoção"
                    android:textSize="10sp"
                    app:cornerRadius="50sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="163dp"
                android:layout_height="207dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/rounded_orange"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.064"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.057">

                <ImageView
                    android:id="@+id/imageViewprodutoBrocolis"
                    android:layout_width="146dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/fundo_branco"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/brocolis" />

                <TextView
                    android:id="@+id/nome_produtoBrocolis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:gravity="center"
                    android:text="600g de Brócolis"
                    android:textColor="#FDFCFC"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/preco_produtoBrocolis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/font_outfit"
                    android:text="De 9,90 por 6,00"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp" />

                <Button
                    android:id="@+id/usar_promocaoBrocolis"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:text="Usar promoção"
                    android:textSize="10sp"
                    app:cornerRadius="50sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="163dp"
                android:layout_height="207dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/rounded_orange"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.064"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.057">

                <ImageView
                    android:id="@+id/imageViewproduto"
                    android:layout_width="146dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/fundo_branco"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/morango" />

                <TextView
                    android:id="@+id/nome_produtoMorango"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:gravity="center"
                    android:text="500g de Morango"
                    android:textColor="#FDFCFC"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/preco_produtoMorango"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/font_outfit"
                    android:text="De 9,90 por 5,90"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp" />

                <Button
                    android:id="@+id/usar_promocaoMorango"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:text="Usar promoção"
                    android:textSize="10sp"
                    app:cornerRadius="50sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="163dp"
                android:layout_height="207dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/rounded_orange"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.064"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.057">

                <ImageView
                    android:id="@+id/imageViewprodutoAbacaxi"
                    android:layout_width="146dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/fundo_branco"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/abacaxi" />

                <TextView
                    android:id="@+id/nome_produtoAbacaxi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:gravity="center"
                    android:text="1kg de Abacaxi"
                    android:textColor="#FDFCFC"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/preco_produtoAbacaxi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/font_outfit"
                    android:text="De 8,90 por 4,50"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp" />

                <Button
                    android:id="@+id/usar_promocaoAbacaxi"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:text="Usar promoção"
                    android:textSize="10sp"
                    app:cornerRadius="50sp" />
            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Disponíveis"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/lista"
        tools:layout_editor_absoluteX="16dp" />

    <LinearLayout
        android:layout_width="388dp"
        android:layout_height="120dp"
        android:background="@drawable/rounded_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lista"
        app:layout_constraintVertical_bias="0.212">

        <ImageView
            android:id="@+id/img"
            android:layout_width="127dp"
            android:layout_height="91dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/fundo_branco"

            android:padding="10dp"
            android:src="@drawable/tomate" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_green"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="123dp"
            tools:layout_editor_absoluteY="411dp">

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/outfit_medium"
                android:text="10% OFF Em morango"
                android:textColor="#0E4601"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/botao2"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/outfit_semi_bold"
                    android:text="Usar cupom"
                    android:textSize="10sp"
                    app:cornerRadius="20dp" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/morango_promocao" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>